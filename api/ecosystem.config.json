{
  "apps": [
    {
      "name": "money-notebook-api",
      "script": "dist/main.js",
      "instances": "max",
      "exec_mode": "cluster",
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "500M",
      "env": {
        "NODE_ENV": "production",
        "PORT": "2053"
      },
      "error_file": "/var/log/pm2/api-error.log",
      "out_file": "/var/log/pm2/api-out.log",
      "merge_logs": true,
      "time": true
    }
  ]
}
